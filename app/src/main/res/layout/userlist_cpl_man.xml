<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:id="@+id/horizontalView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_PriceList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="10">

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"/>
            <TextView
                android:id="@+id/tv_ClothIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clothes"
                android:textStyle="bold"
                android:textSize="15sp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:layout_marginStart="5dp"
                android:layout_weight="2"/>
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"/>
            <TextView
                android:id="@+id/tv_DC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dry_clean1"
                android:textStyle="bold"
                android:textSize="15sp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:layout_marginStart="5dp"
                android:layout_weight="2"/>
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"/>
            <TextView
                android:id="@+id/tv_SI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/steam_ironing"
                android:textStyle="bold"
                android:textSize="15sp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="2"/>
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"/>
            <TextView
                android:id="@+id/tv_WI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/washIron"
                android:textStyle="bold"
                android:textSize="15sp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:layout_marginStart="5dp"
                android:layout_weight="2"/>
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"/>
            <TextView
                android:id="@+id/tv_PL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/premium_laundry"
                android:textStyle="bold"
                android:textSize="15sp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:layout_marginStart="5dp"
                android:layout_weight="2"/>
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"/>

        </LinearLayout>
    </HorizontalScrollView>

    <ListView
        android:id="@+id/user_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:padding="5dp"
        android:layout_below="@+id/horizontalView"
        android:layout_above="@+id/btn_save">
    </ListView>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBlue"
        android:text="@string/next"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

</RelativeLayout>